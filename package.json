{
	"name": "linear-equations-solver",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "npm run build:wasm && vite dev",
		"build": "npm run build:wasm && npm run build:svelte",
		"build:svelte": "vite build",
		"build:wasm": "run-script-os",
		"build:wasm:win32": "pushd \"src/wasm\" && compile.bat && popd",
		"build:wasm:default": "bash ./src/wasm/compile.sh",
		"preview": "vite preview",
		"deploy": "touch build/.nojekyll && npx gh-pages -d build -t true",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "eslint .",
		"postinstall": "run-script-os",
		"postinstall:win32": "pushd \"src/wasm\" && setup.bat && popd",
		"postinstall:default": "bash ./src/wasm/setup.sh"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-static": "^1.0.0-next.50",
		"@sveltejs/kit": "^1.0.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"gh-pages": "^4.0.0",
		"prettier-plugin-svelte": "^2.9.0",
		"run-script-os": "^1.1.6",
		"sass": "^1.57.1",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.5",
		"vitest": "^0.25.3"
	},
	"type": "module"
}
